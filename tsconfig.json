{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["jest", "node"],
    "paths": {
      "@jest/globals": ["./node_modules/@jest/globals"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}